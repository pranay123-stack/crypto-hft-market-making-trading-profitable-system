{
  "trading": {
    "symbol": "BTCUSDT",
    "paper_trading": true
  },
  "exchanges": [
    {
      "id": "binance",
      "enabled": true,
      "priority": 1,
      "rest_url": "https://testnet.binance.vision",
      "ws_url": "wss://testnet.binance.vision/ws",
      "api_key": "${BINANCE_API_KEY}",
      "api_secret": "${BINANCE_API_SECRET}",
      "max_orders_per_second": 10
    },
    {
      "id": "bybit",
      "enabled": true,
      "priority": 2,
      "rest_url": "https://api-testnet.bybit.com",
      "ws_url": "wss://stream-testnet.bybit.com/v5/public/spot",
      "api_key": "${BYBIT_API_KEY}",
      "api_secret": "${BYBIT_API_SECRET}",
      "max_orders_per_second": 10
    },
    {
      "id": "okx",
      "enabled": true,
      "priority": 3,
      "rest_url": "https://www.okx.com",
      "ws_url": "wss://ws.okx.com:8443/ws/v5/public",
      "api_key": "${OKX_API_KEY}",
      "api_secret": "${OKX_API_SECRET}",
      "passphrase": "${OKX_PASSPHRASE}",
      "max_orders_per_second": 10
    }
  ],
  "strategy": {
    "type": "cross_exchange_mm",
    "min_spread_bps": 5.0,
    "max_spread_bps": 100.0,
    "target_spread_bps": 15.0,
    "max_position_per_exchange": 0.1,
    "max_total_position": 0.2,
    "default_order_size": 0.001,
    "min_order_size": 0.0001,
    "max_order_size": 0.01,
    "quote_refresh_us": 100000,
    "hedge_immediately": true,
    "hedge_threshold_percent": 50.0
  },
  "arbitrage": {
    "enabled": true,
    "min_profit_bps": 5.0,
    "max_slippage_bps": 2.0,
    "min_quantity": 0.001,
    "max_quantity": 0.1,
    "max_opportunity_age_ms": 100
  },
  "risk": {
    "max_position_per_exchange": 0.1,
    "max_total_position": 0.2,
    "max_daily_loss": 500.0,
    "max_drawdown": 1000.0,
    "kill_switch_enabled": true
  },
  "system": {
    "log_level": "INFO",
    "log_dir": "./logs",
    "metrics_enabled": true,
    "metrics_port": 9090
  }
}
